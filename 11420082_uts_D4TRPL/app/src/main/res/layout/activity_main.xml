<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <ImageView
        android:background="@drawable/play_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="70pt"
        android:layout_marginBottom="5pt"/>

    <Button
        android:id="@+id/btn_fun_math"
        android:background="@drawable/custombutton"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:text="@string/fun_math"
        android:layout_gravity="center"
        android:textSize="7pt"/>

    <Button
        android:id="@+id/btn_operasi_bangun_ruang"
        android:background="@drawable/custombutton"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginTop="10pt"
        android:text="@string/operasi_bangun_ruang"
        android:layout_gravity="center"
        android:textSize="7pt"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="120pt"
        android:layout_gravity="bottom">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_weight="0"
            android:layout_marginLeft="60pt"
            android:src="@drawable/ikon_telephone"/>

        <Button
            android:id="@+id/telefon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="8pt"
            android:padding="1px"
            android:text="TELEPHONE SENSEI"
            android:background="@color/Orange"/>

    </LinearLayout>

</LinearLayout>